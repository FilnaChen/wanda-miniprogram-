<template name="card">
<view class="card">
<view class="card_show">
<image src="../../common/images/fruit.jpg" mode="widthFix"></image>
<view class="card_show_text">
<text class="card_show_title">{{sale_name}}</text>
<text class="card_show_intro">VQ鲜榨果汁-苹果梨汁</text>
<text class="card_show_quan">50元代金券</text>
<text class="card_show_price">售价：<text style="font-size:25rpx;color:orange">5 </text>元</text>
</view>
</view>
<view class="card_icon">餐饮</view>
<hr style="border-top:1px dashed #ddd;width:660rpx;float:left;margin-top:20rpx;" />
<view style="float:left;">
<text class="card_show_intro">距结束：</text>
<text class="left_time">12小时50分钟</text>
<text class="card_show_intro" style="display:block;">剩余15件</text>
</view>
<view class="imme_purchase">立即购买</view>
<view class="leftCircle"></view>
<view class="rightCircle"></view>
</view>

</template>